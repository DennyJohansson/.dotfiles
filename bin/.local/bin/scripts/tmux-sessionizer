#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
#    printf "Using session $1\n"
    selected=$1
else
 
export SSH_AUTH_SOCK=~/Library/Group\ Containers/2BUA8C4S2C.com.1password/t/agent.sock
  selected=$(find ~/workwork ~/workwork/wbd ~/.dotfiles ~/personal ~/personal/stuff ~/personal/rustland -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
#    printf "No session selected\n"
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
#    printf "Starting tmux\n"
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
#   printf "Creating new session $selected_name\n"
    tmux new-session -ds $selected_name -c $selected
fi

# printf "Switching to session $selected_name\n"
tmux switch-client -t $selected_name
